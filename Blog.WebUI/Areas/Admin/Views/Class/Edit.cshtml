@model Blog.WebUI.Areas.Admin.Models.ClassViewModel.ClassEditVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/_Layout.cshtml";
}

<form asp-controller="class" asp-action="edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-8">
            <div class="demo-form-wrapper">
                <hr />
                <div class="tab-content">
                    <div class="row">
                        <div class="form form-horizontal">
                            <div class="form-group">
                                <label asp-for="Title" class="control-label col-md-2"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Title" class="form-control" placeholder="Title" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Summary" class="control-label col-md-2"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Summary" class="form-control" placeholder="Summary" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="MetaTitle" class="control-label col-md-2"></label>
                                <div class="col-sm-10">
                                    <textarea asp-for="MetaTitle" class="form-control" rows="3" placeholder="Meta Title"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="MetaKeywords" class="control-label col-md-2"></label>
                                <div class="col-sm-10">
                                    <textarea asp-for="MetaKeywords" class="form-control" rows="3" placeholder="Meta Keywords"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="MetaDescription" class="control-label col-md-2"></label>
                                <div class="col-sm-10">
                                    <textarea asp-for="MetaDescription" class="form-control" rows="3" placeholder="Meta Description"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Image" class="control-label col-md-2"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Image" class="form-control" type="file" name="uploadFile" />
                                    <br />
                                    @if (Model.Image != null)
                                    {
                                        <img src="~/Uploads/Class/@Model.Image" width="75" />
                                    }

                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Active" class="control-label col-md-2"></label>
                                <div class="col-sm-10">
                                    <label>
                                        <input asp-for="Active" type="checkbox" />
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Sort" class="control-label col-md-2"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Sort" class="form-control" type="number" />
                                </div>
                            </div>
                            @Html.HiddenFor(model => model.ClassTypeId)
                            @Html.HiddenFor(model => model.ParentId)
                            @Html.HiddenFor(model => model.ClassId)
                            @Html.HiddenFor(model => model.LanguageId)
                            @Html.HiddenFor(model => model.CreationDate)
                            @Html.HiddenFor(model => model.ClassLanguageId)
                            @Html.HiddenFor(model => model.Image)
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Edit" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>